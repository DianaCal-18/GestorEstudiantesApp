<Window x:Class="WpfApp.AgregarCalificacionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Agregar Calificación" Height="250" Width="400">
    <StackPanel Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" >

        <TextBlock Text="Matrícula:" Margin="0,5,0,2"/>
        <TextBox x:Name="txtMatricula" />

        <TextBlock Text="Tipo:" Margin="0,10,0,2"/>
        <ComboBox x:Name="cmbTipo">
            <ComboBoxItem Content="practica" />
            <ComboBoxItem Content="examen" />
        </ComboBox>

        <TextBlock Text="Valor:" Margin="0,10,0,2"/>
        <TextBox x:Name="txtValor" />

        <Button Content="Agregar Calificación" Margin="0,20,0,0" Click="BtnAgregarCalificacion_Click"/>
    </StackPanel>
</Window>
